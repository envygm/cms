<h1>Main Page</h1>
<%= link_to 'Create Page', new_page_path %>
<table>
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Menus</th>
		<th>News</th>
		<th></th>
		<th></th>
		<th>Created</th>
		<th>Updated</th>
	</tr>
	<% @pages.each do |page| %>
		<tr>
			<td><%= page.id %></td>
			<td><%= link_to page.title, page %></td>
			<td><%=raw page.menus.map {|m| link_to m.name, m}.join(', ') %></td>
			<td><%=raw page.news.map {|n| link_to n.title, n}.join(', ') %></td>
			<td><%= link_to 'Delete', page, confirm: 'Page will be deleted!',
											method: :delete %></td>
			<td><%= link_to 'Edit', edit_page_path(page) %></td>	
			<td><%= page.created_at.strftime '%d. %m. %Y at %T UTC' %></td>
			<td><%= page.updated_at.strftime '%d. %m. %Y at %T UTC' %></td>		
		</tr>
	<% end %>
</table>
