<!DOCTYPE html>
<html>
	<head>
	  <title>Cms</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<% if flash.count > 0 %>
		<ul>
			<% flash.each do |key, value| %>
				<li class="<%= key %>"><%= value %></li>
			<% end %>
		</ul>
		<% end %>
		<ul>
			<li><%= link_to 'Dashboard', dashboard_index_path %></li>
			<li><%= link_to 'Pages', pages_path %></li>
			<li><%= link_to 'Menus', menus_path %></li>
			<li><%= link_to 'News', news_index_path %></li>
		</ul>
		<%= yield %>

	</body>
</html>
