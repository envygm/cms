<%= simple_form_for(["admin",@news]) do |f| %>
	<% if @news.errors.any? %>
		<p>The form contains <%= pluralize(@news.errors.count, "error") %>:</p>
	    <ul>
	    	<% @news.errors.full_messages.each do |msg| %>
	    		<li class="error"><%= msg %></li>
	    	<% end %>
	    </ul>
	<% end %>
	<%= f.label :title %>
	<%= f.text_field :title %> <br>
	<%= f.label :content %>
	<%= f.text_area :content %> <br>
	<%= f.label :image %>
	<%= f.text_field :image %><br>
	<%= f.association :page %>
	<%= link_to 'New Page', new_admin_page_path, class: 'small button' %>
	<%= f.submit class: 'small button' %>






<% end %>